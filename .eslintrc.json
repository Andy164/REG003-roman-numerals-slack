{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": ["error", "always"],
    "no-nested-ternary": "warn",
    "no-restricted-globals": ["error", "event", "fdescribe"]
  }
}
